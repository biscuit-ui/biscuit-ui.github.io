{% macro padding(nagetive=false, direction='') %}
    <div class="box-list">
    {% set d = ['.p', direction].join('-') if direction else '.p' %}
    {% if not nagetive %}
        {% for i in range(0, 6) %}
            <div>{{ [d, i].join('-') }}</div>
        {% endfor %}
        {% for i in range(3, 7) %}
            <div>{{ [d, i * 2].join('-') }}</div>
        {% endfor %}
        {% for i in range(4, 7) %}
            <div>{{ [d, i * 4].join('-') }}</div>
        {% endfor %}
        {% for i in range(4, 9) %}
            <div>{{ [d, i * 8].join('-') }}</div>
        {% endfor %}
            <div>{{ [d, 'px'].join('-') }}</div>
        </div>
    {% else %}
        {% set d = ['.p', direction, 'n'].join('-') if direction else '.p-n' %}
        {% for i in range(1, 6) %}
            <div>{{ [d, i].join('-') }}</div>
        {% endfor %}
        {% for i in range(3, 7) %}
            <div>{{ [d, i * 2].join('-') }}</div>
        {% endfor %}
        {% for i in range(4, 7) %}
            <div>{{ [d, i * 4].join('-') }}</div>
        {% endfor %}
        {% for i in range(4, 9) %}
            <div>{{ [d, i * 8].join('-') }}</div>
        {% endfor %}
            <div>{{ [d, 'px'].join('-') }}</div>
        </div>
    {% endif %}
{% endmacro %}

<h1>Padding</h1>
<div class="flex flex-wrap justify-start align-start">
    <div class="box">
        <h1 class="box-title">Padding</h1>
        <div class="list-group">
            {{ padding() }}
            {{ padding(nagetive=true)}}
        </div>
    </div>
    <div class="box">
        <div class="box-title">Padding left and right</div>
        <div class="list-group">
            {{ padding(direction='x') }}
            {{ padding(nagetive=true, direction='x') }}
        </div>
    </div>
    <div class="box">
        <div class="box-title">Padding top and bottom</div>
        <div class="list-group">
            {{ padding(direction='y') }}
            {{ padding(nagetive=true, direction='y') }}
        </div>
    </div>
    <div class="box">
        <div class="box-title">Padding top</div>
        {{ padding(direction='x') }}
    </div>
    <div class="box">
        <div class="box-title">Padding top</div>
        {{ padding(nagetive=true, direction='x') }}
    </div>
    <div class="box">
        <div class="box-title">Padding right</div>
        {{ padding(direction='r') }}
    </div>
    <div class="box">
        <div class="box-title">Padding right</div>
        {{ padding(nagetive=true, direction='r') }}
    </div>
    <div class="box">
        <div class="box-title">Padding bottom</div>
        <div class="list-group">
            {{ padding(direction='b') }}
            {{ padding(nagetive=true, direction='b' )}}
        </div>
    </div>
    <div class="box">
        <div class="box-title">Padding left</div>
        <div class="list-group">
            {{ padding(direction='l') }}
            {{ padding(nagetive=true, direction='l' )}}
        </div>
    </div>
</div>